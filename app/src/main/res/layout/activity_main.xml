<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberBut"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberBut"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seven"
                style="@style/NumberButtonStyle"
                android:text="7"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/eight"
                style="@style/NumberButtonStyle"
                android:text="8"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/nine"
                style="@style/NumberButtonStyle"
                android:text="9"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/mul"
                style="@style/ActionButtonStyle"
                android:text="x"
                android:textSize="50sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/four"
                style="@style/NumberButtonStyle"
                android:text="4"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/five"
                style="@style/NumberButtonStyle"
                android:text="5"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/six"
                style="@style/NumberButtonStyle"
                android:text="6"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/divide"
                style="@style/ActionButtonStyle"
                android:text="/"
                android:textSize="50sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/one"
                style="@style/NumberButtonStyle"
                android:text="1"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/two"
                style="@style/NumberButtonStyle"
                android:text="2"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/three"
                style="@style/NumberButtonStyle"
                android:text="3"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/minus"
                style="@style/ActionButtonStyle"
                android:text="-"
                android:textSize="50sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zero"
                style="@style/NumberButtonStyle"
                android:text="0"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/dot"
                style="@style/NumberButtonStyle"
                android:text="."
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/equal"
                style="@style/EquButtonStyle"
                android:text="="
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/plus"
                style="@style/ActionButtonStyle"
                android:text="+"
                android:textSize="50sp"/>

        </LinearLayout>


    </LinearLayout>

